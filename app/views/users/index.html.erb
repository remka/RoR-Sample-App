<% provide(:title, 'All users') %>

<h1>All users</h1>

<%= will_paginate %>

<div class="row">
  <div class="col-lg-12">
    <% @users.each do |user| %>
      <div class="media">
        <a href="#" class="pull-left">
          <%= gravatar_for user %>
        </a>
        <p class="small">
          <%= link_to user.name, user %>
        </p>
      </div>
    <% end %>
  </div>
</div>

<%= will_paginate %>
